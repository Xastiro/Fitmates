<div class="container-fluid d-flex screen-header">
  <h2>ADD WORKOUT</h2>
  <%= link_to :back, class: "text-decoration-none" do  %>
    <%= show_svg('exit-button.svg') %>
  <% end %>
</div>

<%= simple_form_for(@workout) do |f| %>
  <%= f.input :title %>
  <%= f.input :event_date %>
  <%= f.input :start_time %>
  <%= f.input :end_time %>
  <%= f.input :location, input_html: {data: {location_autocomplete_target: "location"}, class: "d-none"}, wrapper_html: {data: {controller: "location-autocomplete", location_autocomplete_api_key_value: ENV["MAPBOX_API_KEY"]}} %>
  <%= f.input :recurring %>
  <%# <%= f.input :type %>
  <%# <%= f.input :tag %>
  <%= f.input :description %>
  <%= f.submit %>
<% end %>
